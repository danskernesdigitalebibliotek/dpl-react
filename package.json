{
  "name": "@reload/ddb-react",
  "version": "0.0.1-rc.2",
  "license": "AGPL-3.0-only",
  "repository": "git://github.com/reload/ddb-react.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": "^12.13.0",
    "yarn": "^1.17.3"
  },
  "scripts": {
    "fmt": "prettier --config ./.prettierrc --write \"src/**/*.{js,jsx}\"",
    "lint:js": "eslint --ext .js --ext .jsx ./src",
    "lint:js:fix": "eslint --ext .js --ext .jsx --fix ./src",
    "lint:scss": "stylelint \"./src/**/*.scss\"",
    "lint:scss:fix": "stylelint --fix \"./src/**/*.scss\"",
    "lint": "yarn lint:js && yarn lint:scss",
    "clean": "rm -r -f ./dist/*",
    "build": "concurrently --raw \"yarn clean\" \"yarn lint:scss:fix\" \"yarn build:js:prod\" \"yarn build:css:prod\"",
    "build:js:dev": "webpack --mode=development --config webpack.config.js",
    "build:js:prod": "NODE_ENV=production webpack --mode=production --config webpack.config.js",
    "build:css:dev": "postcss ./src/apps/**/*.scss ./src/components/components.scss --ext css --dir ./dist",
    "build:css:prod": "postcss ./src/apps/**/*.scss ./src/components/components.scss --no-map --ext css --dir ./dist --env production",
    "watch:css": "postcss ./src/apps/**/*.scss ./src/components/components.scss --ext css --dir ./dist --watch",
    "watch:lint:scss": "chokidar \"./src/**/*.scss\" -c \"yarn lint:scss:fix\"",
    "build:doc": "doctoc README.md",
    "start": "yarn dev",
    "dev": "concurrently --raw \"start-storybook --port 57021\" \"yarn watch:lint:scss\"",
    "build:dev": "build-storybook -c .storybook -o dev",
    "test": "jest"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./scripts/jest.setup.js"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@namics/stylelint-bem": "^6.1.0",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "autoprefixer": "^9.7.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "chalk": "^2.4.2",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.0.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "doctoc": "^1.4.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.5",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-testing-library": "^1.3.2",
    "inquirer": "^7.0.0",
    "jest": "^24.9.0",
    "mutationobserver-shim": "^0.3.3",
    "node-sass": "^4.13.0",
    "postcss": "^7.0.21",
    "postcss-cli": "^6.1.3",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.18.2",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.12.1",
    "stylelint-webpack-plugin": "^1.0.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "@reach/alert": "^0.6.1",
    "@reach/auto-id": "^0.6.1",
    "@reach/dialog": "^0.5.4",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-error-boundary": "^1.2.5",
    "react-hook-form": "^3.28.13",
    "url-prop-type": "^1.2.3"
  }
}
